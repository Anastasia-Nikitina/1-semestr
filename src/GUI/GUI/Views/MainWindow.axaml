<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="GUI">
    <Grid RowDefinitions="Auto,*,Auto,0.5*" Name="Grid">
     
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" InputGesture="Ctrl + O" Click="GoOpen" />
                <MenuItem Header="_New" InputGesture="Ctrl + N" Click="GoNew" />
                <MenuItem Header="_Save" InputGesture="Ctrl + S" Click="GoSave" />
            </MenuItem>
            <MenuItem Header="_Run" Click="Run" Name="Run"/>
        </Menu>
        <Grid Grid.Row="1">
            <TextBox Name="InputCode"
                     AcceptsReturn="True"
                     BorderThickness="0"
                     IsReadOnly="False"/>
        </Grid>
        
        <GridSplitter Grid.Row="2" ResizeDirection="Rows"/>
        
        <Grid Grid.Row="3">
            <TextBox Name="Console"
                     IsReadOnly="True"/>
        </Grid>
    </Grid>

</Window>

